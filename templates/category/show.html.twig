{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ category.name }}</h1>
		</div>
	</div>

	<div class="indexProgram">
		{% for program in programs %}

			<div class="card bg-light m-3" style="width: 18rem;">
				<img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }} poster">
				<div class="card-body">
					<h3 class="card-title text-white">{{ program.title }}</h3>
					<p class="card-text text-white">Catégorie :
						{{ program.category.name }}<br>{{ program.synopsis }}</p>
				</div>
				<a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary bg-info">Voir la fiche</a>
			</div>
		{% else %}
			Aucune série trouvée.
		{% endfor %}
	</div>

	<a href="{{ path('index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
