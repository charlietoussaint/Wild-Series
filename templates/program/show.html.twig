{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>

			{% for season in program.seasons %}
				{# {{ dump(season.id) }} #}
				<p>{{ season.year }}{{ season.description }}</p>
				<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}" class="btn btn-primary bg-info">Plus d'infos</a>
			{% endfor %}

		</div>
	</div>

	<a href="{{ path('index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
