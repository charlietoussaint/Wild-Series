{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="align-self-center">
	<div class="media">
		<img class="align-self-center mr-3" src="/build/images/{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body align-self-center w-80">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégory :
				{{ program.category.name }}</p>

			{% for season in program.seasons %}
				<p>{{ season.year }}{{ season.description }}</p>
				<a href="{{ path("program_season_show", { slug: program.slug, season_id: season.id }) }}" class="btn btn-primary bg-info">Plus d'infos</a>
			{% endfor %}
			<strong>Acteurs :</strong>
			<ul>
				{% for actor in program.actors %}
					<li>{{ actor.name }}</li>
				{% else %}
					<li>Aucun acteur pour cette série</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	</div>

{% endblock %}
