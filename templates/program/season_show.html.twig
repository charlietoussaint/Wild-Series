{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">

		<div class="media-body">

			{% for episode in seasons.episodes %}
				<h1 class="mt-0">{{ episode.title }}</h1>
				<p>{{ episode.synopsis }}</p>
			</div>
		</div>
	{% endfor %}

	<a href="{{ path('index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
